<body>

    <div class="ambient-bg"></div>
    <div class="grid-overlay"></div>

    <div id="login-screen">
        <div class="logo-text">EVYON V6</div>
        <input type="password" id="password" class="login-input" placeholder="ACCESS CODE" onkeydown="handleLoginKey(event)">
        <div id="login-msg" style="font-size: 12px; color: #ef4444; margin-top: 10px; opacity: 0;">ACCESO DENEGADO</div>
    </div>

    <div id="orb-interface">
        <div class="orb-container" id="evyonOrb" onclick="cycleState()">
            <div class="orb-ring ring-pulse"></div>
            <div class="orb-ring ring-1"></div>
            <div class="orb-ring ring-2"></div>
            <div class="orb-core"></div>
        </div>
        <div class="status-text" id="statusLabel">SISTEMA EN LÍNEA</div>
        
        <input type="text" id="hiddenInput" style="opacity: 0; position: absolute; bottom: 0;">
    </div>

    <script>
        /* ----------------------------------------------------
           1. CEREBRO HEREDADO (DATOS V5.1)
           ---------------------------------------------------- */
        const INSTITUTION_DB = {
            "tec": { pass: "TEC2106", name: "Iván (Estudiante)", mode: "default" },
            "justin": { pass: "TEC2025", name: "Sensei Justin", mode: "spartan" },
            "founder": { pass: "IVAN2106", name: "Sr. Iván (Founder)", mode: "jarvis" }
        };

        let currentUser = null;
        let currentState = 'idle'; // idle, listening, processing, speaking
        
        // Simulación de secuencia para pruebas visuales
        const states = ['idle', 'listening', 'processing', 'speaking'];
        let stateIndex = 0;

        /* ----------------------------------------------------
           2. SISTEMA DE LOGIN
           ---------------------------------------------------- */
        function handleLoginKey(e) {
            if (e.key === "Enter") {
                const input = e.target.value;
                const userKey = Object.keys(INSTITUTION_DB).find(key => INSTITUTION_DB[key].pass === input);

                if (userKey) {
                    currentUser = INSTITUTION_DB[userKey];
                    triggerTransition();
                } else {
                    const msg = document.getElementById("login-msg");
                    msg.style.opacity = 1;
                    e.target.style.borderColor = "#ef4444";
                    setTimeout(() => { msg.style.opacity = 0; e.target.style.borderColor = "#333"; }, 2000);
                }
            }
        }

        function triggerTransition() {
            const loginScreen = document.getElementById("login-screen");
            const orbInterface = document.getElementById("orb-interface");
            
            loginScreen.style.opacity = 0;
            loginScreen.style.transform = "scale(0.9)";
            
            setTimeout(() => {
                loginScreen.style.display = "none";
                orbInterface.style.display = "flex";
                // Pequeño delay para el fade-in
                setTimeout(() => { orbInterface.style.opacity = 1; }, 50);
                
                // Mensaje de bienvenida en consola (luego será audio)
                console.log(`%c BIENVENIDO ${currentUser.name}`, "color: #3cd186; font-size: 20px;");
                document.getElementById("statusLabel").innerText = `BIENVENIDO, ${currentUser.name.split(' ')[0].toUpperCase()}`;
            }, 500);
        }

        /* ----------------------------------------------------
           3. MOTOR VISUAL (ORB ENGINE)
           ---------------------------------------------------- */
        function setOrbState(newState) {
            const container = document.getElementById("evyonOrb");
            const label = document.getElementById("statusLabel");
            
            // Limpiar clases anteriores
            container.classList.remove("state-idle", "state-listening", "state-processing", "state-speaking");
            
            // Añadir nueva clase
            container.classList.add(`state-${newState}`);
            currentState = newState;

            // Actualizar texto
            switch(newState) {
                case 'idle': label.innerText = "EN ESPERA"; break;
                case 'listening': label.innerText = "ESCUCHANDO..."; label.style.color = "#3cd186"; break;
                case 'processing': label.innerText = "ANALIZANDO PATRONES"; label.style.color = "#22d3ee"; break;
                case 'speaking': label.innerText = "TRANSMITIENDO"; label.style.color = "#fff"; break;
            }
        }

        // FUNCIÓN DE PRUEBA: Clic en la esfera para rotar estados
        function cycleState() {
            stateIndex = (stateIndex + 1) % states.length;
            setOrbState(states[stateIndex]);
        }

        // Iniciar en Idle
        setOrbState('idle');

    </script>
</body>
</html>
